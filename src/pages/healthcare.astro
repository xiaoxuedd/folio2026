import pillar1Diagram1 from '../images/healthcare-pillar-1-diagram-1.png';
import pillar1Diagram2 from '../images/healthcare-pillar-1-diagram-2.png';
import pillar2Image1 from '../images/healthcare-pillar-2-1.png';
import pillar2Image2Day from '../images/healthcare-pillar-2-2-day.png';
