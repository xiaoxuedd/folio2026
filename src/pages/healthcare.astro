import ProjectNavigation from '../components/ProjectNavigation';
import { ChallengeDiagram } from '../components/ChallengeDiagram';
import { ImpactMetrics } from '../components/ImpactMetrics';
import PillarNumber from '../components/PillarNumber.astro';
import CircleTitle from '../components/CircleTitle.astro';
import Footer from '../components/Footer.astro';
import JourneyAnimation from '../components/JourneyAnimation';
import ImageCarousel from '../components/ImageCarousel';
import TestimonialCarousel from '../components/TestimonialCarousel';
import { Image, getImage } from 'astro:assets';

// Import images
