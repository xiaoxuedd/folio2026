  { number: 12, suffix: "%", description: "faster expansion of treatment centre and referral network capacity" },
  { number: 25, suffix: "%", description: "reduction in time-to-treatment across key geographies" },
  { number: 98, suffix: "%+", description: "satisfaction from HCPs on clarity, reliability, readiness" },
