            <ImpactMetrics title="Value" metrics={impactMetrics} client:load />
          </div>

          <!-- Testimonials within Impact -->
          <div class="testimonial-section" data-aos="fade-up">
            <TestimonialCarousel testimonials={testimonials} client:load />
          </div>
        </section>

        <!-- 5. Reflection Section -->
