  { number: 6, description: "cross-functional strategy and alignment workshops" },
  { number: 10, suffix: "+", description: "deep-dive country engagements" },
  { number: 50, suffix: "+", description: "designed and validated service touchpoints & features" },
  { number: 100, suffix: "+", description: "stakeholder and clinician interviews" }
