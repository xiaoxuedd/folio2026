---
import MicrointeractionExamples from '../components/MicrointeractionExamples';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Microinteraction Test Lab</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --color-primary: #6443fe;
      --color-secondary: #072932;
      --color-accent: #271968;
      --color-bg: #ffffff;
      --color-bg-secondary: #f6f6f6;
      --color-text: #271968;
      --color-text-light: #072932;
      --color-border: #e5e5e5;
      --spacing-sm: 0.5rem;
      --spacing-md: 1rem;
      --spacing-lg: 2rem;
      --spacing-xl: 4rem;
      --radius-sm: 4px;
      --radius-md: 8px;
      --radius-lg: 12px;
      --radius-full: 9999px;
      --font-size-ui: 0.875rem;
      --font-weight-medium: 500;
      --font-weight-semibold: 600;
      --transition-normal: 0.2s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--color-bg);
      color: var(--color-text);
      padding: 2rem;
      line-height: 1.6;
    }

    .header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .header h1 {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--color-primary);
      margin-bottom: 0.5rem;
    }

    .header p {
      color: var(--color-text-light);
      font-size: 1.125rem;
    }

    .back-link {
      display: inline-block;
      margin-bottom: 2rem;
      padding: 0.5rem 1rem;
      background: var(--color-bg-secondary);
      border: 2px solid var(--color-border);
      border-radius: var(--radius-md);
      text-decoration: none;
      color: var(--color-text);
      font-weight: var(--font-weight-medium);
      transition: all var(--transition-normal);
    }

    .back-link:hover {
      border-color: var(--color-primary);
      transform: translateX(-4px);
    }
  </style>
</head>
<body>
  <a href="/" class="back-link">‚Üê Back to Home</a>

  <div class="header">
    <h1>Microinteraction Test Lab</h1>
    <p>Experimenting with playful interactions using Framer Motion</p>
  </div>

  <MicrointeractionExamples client:load />
</body>
</html>
