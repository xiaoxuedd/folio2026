---
import type { Project } from '../data/projects';
import LockIcon from './icons/LockIcon.astro';
import ArrowIcon from './icons/ArrowIcon.astro';

interface Props {
  project: Project;
  index: number;
}

const { project, index} = Astro.props;
const isFeatured = index === 0;
const description = index === 0 ? project.description : (project.shortDescription || project.description);
const CardWrapper = project.link ? 'a' : 'div';
const baseUrl = import.meta.env.BASE_URL;
---

<CardWrapper
  href={project.link ? `${baseUrl}${project.link}`.replace(/\/\//g, '/') : undefined}
  class={`project-card ${isFeatured ? 'featured' : ''} ${!project.link ? 'no-link' : ''}`}
  data-aos="fade-up"
>
  <div class="project-image-wrapper">
    <img src={`${baseUrl}${project.image}`.replace(/\/\//g, '/')} alt={project.title} loading="lazy" />
    {project.isProtected && (
      <div class="protected-badge">
        <LockIcon width={12} height={12} />
        Protected
      </div>
    )}
    {project.link && (
      <div class="arrow-button">
        <ArrowIcon width={20} height={20} class="arrow-icon" rotate={-45} />
      </div>
    )}
    <div class="project-overlay-blur"></div>
    <div class="project-overlay">
      <div class="overlay-content">
        {project.overlaySubtitle && (
          <p class="overlay-subtitle">{project.overlaySubtitle}</p>
        )}
        {project.overlayBody && (
          <p class="overlay-body">{project.overlayBody}</p>
        )}
      </div>
    </div>
  </div>
  <div class="project-info">
    <span class="category">{project.category}</span>
    <h3>{project.title}</h3>
  </div>
</CardWrapper>

<style>
  .project-card {
    display: block;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: white;
    box-shadow: var(--shadow-sm);
    transition: all 0.4s ease;
  }

  :global([data-theme="dark"]) .project-card {
    background: var(--color-bg-secondary);
  }

  .project-card.featured {
    /* Featured card styling handled by parent container */
  }

  .project-card.no-link {
    cursor: default;
  }

  .project-card:not(.no-link):hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .project-card .project-image-wrapper {
    position: relative;
    width: 100%;
    height: 280px;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .project-card.featured .project-image-wrapper {
    height: 400px;
  }

  .project-card .project-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .project-card:hover .project-image-wrapper img {
    transform: scale(1.03);
  }

  .project-overlay-blur {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.55);
    backdrop-filter: blur(var(--blur-overlay));
    -webkit-backdrop-filter: blur(var(--blur-overlay));
    display: none;
    z-index: 1;
  }

  .project-card:hover .project-overlay-blur {
    display: block;
    animation: fadeInBlur 0.4s ease forwards;
  }

  .project-card:not(:hover) .project-overlay-blur {
    animation: fadeOutBlur 0.4s ease forwards;
  }

  .project-card:hover .project-image-wrapper img,
  .project-card:hover .project-overlay-blur {
    transform: scale(1.03);
  }

  @keyframes fadeInBlur {
    from {
      opacity: 0;
      transform: scale(1);
    }
    to {
      opacity: 1;
      transform: scale(1.03);
    }
  }

  @keyframes fadeOutBlur {
    from {
      opacity: 1;
      transform: scale(1.03);
    }
    to {
      opacity: 0;
      transform: scale(1);
    }
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-md);
    opacity: 0;
    z-index: 2;
    overflow: hidden;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .project-card:hover .project-overlay {
    opacity: 1;
    pointer-events: auto;
  }

  .overlay-content {
    color: white;
    width: 100%;
    max-width: 600px;
    padding: var(--spacing-md);
  }

  .overlay-subtitle {
    font-size: var(--font-size-body-1);
    font-weight: var(--font-weight-medium);
    font-style: italic;
    line-height: var(--line-height-body);
    margin: 0 0 var(--spacing-sm);
    color: rgba(255, 255, 255, 0.95);
  }

  .overlay-body {
    font-size: var(--font-size-body-1);
    line-height: var(--line-height-body);
    margin: 0 0 var(--spacing-sm);
    color: rgba(255, 255, 255, 0.95);
  }

  .overlay-disciplines {
    margin-bottom: 0;
    padding-top: var(--spacing-sm);
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  .disciplines-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .disciplines-list li {
    font-size: var(--font-size-ui-sm);
    color: white;
    padding: 0.25rem 0.625rem;
    background: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-2xl);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .project-card.no-link:hover .project-overlay {
    cursor: default;
  }

  .protected-badge {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(var(--blur-overlay));
    color: white;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-2xl);
    font-size: var(--font-size-ui-sm);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    z-index: 2;
  }

  .arrow-button {
    position: absolute;
    bottom: 1.5rem;
    left: 1.5rem;
    width: var(--icon-lg);
    height: 48px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(var(--blur-overlay));
    border-radius: 625% / 416.666667%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 2;
    transform: rotate(45deg);
  }

  .project-card .arrow-button .arrow-icon {
    width: var(--icon-sm);
    height: var(--icon-sm);
    position: absolute;
    top: 14px;
    left: 6px;
    transition: width 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
                height 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
                top 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
                left 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
                margin 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
                stroke 0.1s linear;
    transform: rotate(-45deg) !important;
  }

  .project-card .arrow-button .arrow-icon * {
    transition: stroke 0.1s linear !important;
  }

  .project-card:hover .arrow-button {
    background: rgb(255, 255, 255);
    width: 56px;
    height: 56px;
    border-radius: 200px;
    color: #271968;
    transform: rotate(90deg) scale(1.1);
  }

  .project-card:hover .arrow-button .arrow-icon {
    width: var(--icon-md);
    height: var(--icon-md);
    top: 50%;
    left: 50%;
    margin-top: -12px;
    margin-left: -12px;
    transform: rotate(-45deg) !important;
  }

  .project-card .project-info {
    padding: 0.5rem 0.75rem;
  }

  .project-card .category {
    display: block;
    font-size: 0.6875rem;
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
    opacity: 0.7;
  }

  .project-card h3 {
    font-size: var(--font-size-body-0);
    margin: 0;
    line-height: var(--line-height-body);
  }

  @media (max-width: 768px) {
    .project-card .project-image-wrapper {
      height: 200px;
    }

    .project-card.featured .project-image-wrapper {
      height: 280px;
    }

    .project-overlay {
      padding: 1.5rem;
    }

    .overlay-content {
      padding: var(--spacing-sm);
    }

    .overlay-subtitle {
      font-size: var(--font-size-body-1);
      margin-bottom: var(--spacing-xs);
    }

    .overlay-body {
      font-size: var(--font-size-body-1);
      margin-bottom: var(--spacing-sm);
    }

    .disciplines-list li {
      font-size: var(--font-size-ui-xs);
      padding: 0.1875rem 0.5rem;
    }

    .protected-badge {
      top: 1rem;
      right: 1rem;
      padding: 0.375rem 0.75rem;
      font-size: var(--font-size-ui-xs);
    }

    .arrow-button {
      bottom: 1rem;
      left: 1rem;
      width: 28px;
      height: 42px;
      transform: rotate(45deg);
    }

    .project-card .arrow-button .arrow-icon {
      width: var(--icon-xs);
      height: var(--icon-xs);
      transition: width 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
                  height 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
                  stroke 0.1s linear;
      transform: rotate(-45deg) !important;
    }

    .project-card .arrow-button .arrow-icon * {
      transition: stroke 0.1s linear !important;
    }

    .project-card:hover .arrow-button {
      width: 44px;
      height: 44px;
      border-radius: 200px;
      color: #271968;
      transform: rotate(90deg) scale(1.1);
    }

    .project-card:hover .arrow-button .arrow-icon {
      transform: rotate(-45deg) !important;
    }

    .project-card .project-info {
      padding: 0.5rem 0.625rem;
    }

    .project-card .category {
      font-size: 0.625rem;
      margin-bottom: 0.1875rem;
    }

    .project-card h3 {
      font-size: var(--font-size-body-0);
      line-height: var(--line-height-body);
    }
  }
</style>
