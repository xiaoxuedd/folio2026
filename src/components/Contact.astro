---
import EmailIcon from './icons/EmailIcon.astro';
import LinkedInIcon from './icons/LinkedInIcon.astro';
import DownloadIcon from './icons/DownloadIcon.astro';
---

<section id="contact" class="contact">
  <div class="container">
    <div class="contact-grid">
      <!-- Left: Contact Info -->
      <div class="contact-left" data-aos="fade-right" data-aos-delay="100">
        <div class="contact-content">
          <h2>About me</h2>
          <p class="contact-intro">
            <strong>Hi, I'm Xiaoxue</strong> (/shiau_shweh/ — say it out loud, don't be shy!)
          </p>
          <p class="contact-intro">
            As a designer, I thrive at the intersection of technology, strategy, and humanity, helping organisations see through their users' eyes, spot the opportunities hiding in plain sight, and transform big ideas into tangible change.
          </p>
          <p class="contact-intro">
            From consultancy war rooms to in-house innovation labs, I've learned that the best solutions emerge when we put people first and aren't afraid to challenge business assumptions.
          </p>
          <p class="contact-intro">
            I believe in Design Doings over Design Thinking, turning insight into action and strategy into reality. Whether you're tackling a gnarly problem or exploring new possibilities, I'd love to hear from you.
          </p>

          <div class="contact-links">
            <a href="mailto:xiaoxue.sherryd@gmail.com" class="contact-icon-link" aria-label="Email">
              <EmailIcon />
              <span class="icon-label">Email</span>
            </a>

            <a href="https://www.linkedin.com/in/xiaoxued/" target="_blank" rel="noopener noreferrer" class="contact-icon-link" aria-label="LinkedIn">
              <LinkedInIcon />
              <span class="icon-label">LinkedIn</span>
            </a>

            <a href="/cv.pdf" class="contact-icon-link" download aria-label="Download CV">
              <DownloadIcon />
              <span class="icon-label">Resume</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Right: Bento Box Metrics -->
      <div class="metrics-bento">
        <div class="metric-card slide-from-left" style="animation-delay: 0.1s;">
          <span class="metric-number">10+ products</span>
          <span class="metric-label">delivered from concept to live operation and scaled adoption</span>
        </div>

        <div class="metric-card slide-from-top" style="animation-delay: 0.15s;">
          <span class="metric-number">15+ international markets</span>
          <span class="metric-label">balancing global consistency with localised execution</span>
        </div>

        <div class="metric-card slide-from-right" style="animation-delay: 0.2s;">
          <span class="metric-number">10M+ users and teams</span>
          <span class="metric-label">with measurable improvements in conversion, satisfaction, and efficiency</span>
        </div>

        <div class="metric-card metric-wide zoom-fade" style="animation-delay: 0.25s;">
          <span class="metric-number">10+ years experience</span>
          <span class="metric-label">designing E2E products and services across consultancy and in-house teams</span>
        </div>

        <div class="metric-card metric-tall slide-from-bottom" style="animation-delay: 0.35s;">
          <span class="metric-number">£30M+ in revenue and efficiency gains</span>
          <span class="metric-label">driven through systemic service innovations</span>
        </div>

        <div class="metric-card metric-wide slide-from-left" style="animation-delay: 0.3s;">
          <span class="metric-number">5+ organisational transformation</span>
          <span class="metric-label">coordinating teams across commercials, data, operations, legal & compliance, and support</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: var(--color-bg);
    height: 100vh;
    display: flex;
    align-items: center;
    padding: 0 var(--spacing-md);
    transition: background-color 0.3s ease;
    overflow: hidden;
  }

  .contact .container {
    padding: var(--spacing-xl) 0 var(--spacing-md) 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    align-items: center;
    height: calc(100vh - var(--spacing-xl) - var(--spacing-md));
  }

  /* Left Side - Contact Info */
  .contact-left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    overflow-y: auto;
    padding-right: var(--spacing-sm);
  }

  .contact-content h2 {
    font-size: var(--font-size-h2);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin: 0 0 var(--spacing-md) 0;
    transition: color 0.3s ease;
  }

  /* Custom scrollbar */
  .contact-left::-webkit-scrollbar {
    width: 6px;
  }

  .contact-left::-webkit-scrollbar-track {
    background: transparent;
  }

  .contact-left::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 3px;
  }

  .contact-left::-webkit-scrollbar-thumb:hover {
    background: var(--color-primary);
  }

  .contact-intro {
    font-size: var(--font-size-body-0);
    line-height: var(--line-height-body);
    color: var(--color-text-light);
    margin-bottom: var(--spacing-sm);
    transition: color 0.3s ease;
  }

  .contact-links {
    display: flex;
    align-items: center;
    gap: var(--gap-xs);
    margin-top: var(--spacing-md);
  }

  .contact-icon-link {
    width: var(--icon-2xl);
    height: var(--icon-2xl);
    background: transparent;
    border-radius: var(--radius-md);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    text-decoration: none;
    position: relative;
  }

  .contact-icon-link :global(svg) {
    width: var(--icon-2xl);
    height: var(--icon-2xl);
  }

  .icon-label {
    position: absolute;
    top: 56px;
    font-size: var(--font-size-ui-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    white-space: nowrap;
    opacity: 0;
    transform: translateY(-4px);
    transition: all 0.3s ease;
    pointer-events: none;
  }

  .contact-icon-link:hover {
    transform: translateY(-2px);
  }

  .contact-icon-link:hover .icon-label {
    opacity: 1;
    transform: translateY(0);
  }

  /* Right Side - Bento Box Metrics */
  .metrics-bento {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: var(--spacing-sm);
    height: 85%;
    max-height: 600px;
  }

  .metric-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-md);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-xs);
    text-align: center;
    transition: all 0.3s ease;
  }

  .metric-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    background: var(--color-bg);
  }

  .metric-wide {
    grid-column: span 2;
  }

  .metric-tall {
    grid-row: span 2;
  }

  .metric-number {
    font-size: var(--font-size-h3);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    line-height: var(--line-height-hero);
    transition: color 0.3s ease;
  }

  .metric-label {
    font-size: var(--font-size-ui-xs);
    color: var(--color-text-secondary);
    font-weight: var(--font-weight-medium);
    line-height: var(--line-height-body);
    transition: color 0.3s ease;
  }

  /* Slide animations */
  @keyframes slideFromLeft {
    from {
      opacity: 0;
      transform: translateX(-60px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideFromRight {
    from {
      opacity: 0;
      transform: translateX(60px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideFromTop {
    from {
      opacity: 0;
      transform: translateY(-60px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideFromBottom {
    from {
      opacity: 0;
      transform: translateY(60px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes zoomFade {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .slide-from-left {
    opacity: 0;
    animation: slideFromLeft 0.6s ease-out forwards;
  }

  .slide-from-right {
    opacity: 0;
    animation: slideFromRight 0.6s ease-out forwards;
  }

  .slide-from-top {
    opacity: 0;
    animation: slideFromTop 0.6s ease-out forwards;
  }

  .slide-from-bottom {
    opacity: 0;
    animation: slideFromBottom 0.6s ease-out forwards;
  }

  .zoom-fade {
    opacity: 0;
    animation: zoomFade 0.6s ease-out forwards;
  }

  @media (max-width: 968px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .metrics-bento {
      grid-template-columns: repeat(2, 1fr);
    }

    .metric-large {
      grid-column: span 1;
      grid-row: span 1;
    }

    .metric-wide {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .metrics-bento {
      grid-template-columns: 1fr;
    }

    .metric-large,
    .metric-wide {
      grid-column: span 1;
    }
  }
</style>
